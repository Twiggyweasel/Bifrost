<section class="section">
    <div class="container">
        <div class='columns'>
            <div class='column is-three-quarters'>
                <h1 class="title is-inline-block" style='margin-right: 15px;'>Clients</h1>
                <span class='is-inline-block'>
                <%= search_form_for([:admin, @q], html: {style: 'width: 250px'}) do |f| %>
                
                <div class="field">
  <p class="control has-icons-left" style='250px'>
    <%= f.search_field :name_cont, class: 'client_search input is-rounded' %>
    <span class="icon is-small is-left">
      <i class="far fa-search"></i>
    </span>
  </p>
</div>

  <%= f.submit "search", class:"button is-info is-hidden" %>
<% end %></span>
                
<!--                  <i class="far fa-filter fa-lg" style='margin-bottom: 5px; margin-left: 5px;'></i>
              <i class="far fa-sort fa-lg" style='margin-bottom: 5px; margin-left: 5px;'></i> -->
                <span class='is-pulled-right'>
                    <%= link_to(new_admin_client_path, class: "button is-primary") do %>
                            <i class="far fa-plus-circle" style='margin-right: 5px;'></i> Create Client
                    <% end %> 
                </span>
                <table class='table is-fullwidth is-hoverable clickable_row'>
                    <thead style="background-color: #e9eff5;">
                        <tr>
                            <th><%= sort_link(@q, :id) %></th>
                            <th><%= sort_link(@q, :name, 'Client Name') %></th>
                            <th><%= sort_link(@q, :primary_contact) %></th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class='page_clients'>
                        <%= render @clients %>  
                    </tbody>
                </table>
                <div id='paginator'>
                    <%= paginate @clients, remote: true %>
                </div>
            </div>
            <div class='column'>
                <section>
                    <h2 class='title' style='display: inline-block; margin-right: 15px;'>Recent Activity</h2>
                    <div class='box' style='min-height: 150px'></div>
                </section>
                <br />
                <section>
                    <h2 class="title is-inline-block" style='margin-right: 15px;'>Tickets</h2>
                    <span class='is-pulled-right' style='margin-top: 10px;'><%= link_to('View All >>', admin_tickets_path) %></span>
                    <div class='box' style='min-height: 150px'>
                        <% @tickets.each do |t| %>
                            <%= link_to(admin_ticket_path(t)) do %>
                                <%= t.ticket_number + " - " + t.client.name + " - " + t.days_pending + " day" %>
                            <% end %>
                            <br>
                        <% end %>
                    </div>              
                </section>
            </div>
        </div>
    </div>
</section>