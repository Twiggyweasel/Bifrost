<section class="section">
    <div class="container">
      <h1 class="title" style='display: inline-block; margin-right: 15px;'>Clients</h1>
      <i class="far fa-search fa-lg" style='margin-bottom: 5px;'></i>
      <span style='float:right'>
        <%= link_to(new_admin_client_path, class: "button is-primary") do %>
            <i class="far fa-plus-circle" style='margin-right: 5px;'></i> Create Client
        <% end %> 
      </span>
        <div class='columns'>
            <table class='table is-fullwidth'>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Client Name</th>
                        <th>Primary Contact</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <%= render @clients %>  
                </tbody>
            </table>

        </div>
    </div>
</section>
