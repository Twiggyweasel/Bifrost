<section class="section">
    <div class="container">
        <div class='columns'>
            <div class='column is-three-quarters'>
                <h1 class="title is-inline-block" style='margin-right: 15px;'>Clients</h1>
                <i class="far fa-search fa-lg" style='margin-bottom: 5px;'></i>
                <i class="far fa-filter fa-lg" style='margin-bottom: 5px; margin-left: 5px;'></i>
                <i class="far fa-sort fa-lg" style='margin-bottom: 5px; margin-left: 5px;'></i>
                <span class='is-pulled-right'>
                    <%= link_to(new_admin_client_path, class: "button is-primary") do %>
                            <i class="far fa-plus-circle" style='margin-right: 5px;'></i> Create Client
                    <% end %> 
                </span>
                <table class='table is-fullwidth'>
                    <thead style="background-color: #e9eff5;">
                        <tr>
                            <th>ID</th>
                            <th>Client Name</th>
                            <th>Primary Contact</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%= render @clients %>  
                    </tbody>
                </table>
            </div>
            <div class='column'>
                <section>
                    <h2 class='title' style='display: inline-block; margin-right: 15px;'>Recent Activity</h2>
                    <div class='box' style='min-height: 150px'></div>
                </section>
                <br />
                <section>
                    <h2 class="title is-inline-block" style='margin-right: 15px;'>Tickets</h2>
                    <span class='is-pulled-right' style='margin-top: 10px;'><%= link_to('View All >>', admin_tickets_path) %></span>
                    <div class='box' style='min-height: 150px'>
                        <% @tickets.each do |t| %>
                            <%= link_to(admin_ticket_path(t)) do %>
                                <%= t.ticket_number + " - " + t.client.name + " - " + t.days_pending + " day" %>
                            <% end %>
                            <br>
                        <% end %>
                    </div>              
                </section>
            </div>
        </div>
    </div>
</section>
